// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Salary {
  id     Int   @id @default(autoincrement())
  amount Float
  year   Int
  month  Int
  @@unique([year, month])
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  expenses Expense[]
}

model Expense {
  id               Int            @id @default(autoincrement())
  amount           Float
  description      String?
  date             DateTime       @default(now())
  category         Category       @relation(fields: [categoryId], references: [id])
  categoryId       Int
  billingPeriod    BillingPeriod? @relation(fields: [billingPeriodId], references: [id])
  billingPeriodId  Int?
}

model BillingPeriod {
  id                        Int       @id @default(autoincrement())
  name                      String    @unique
  startDate                 DateTime
  endDate                   DateTime
  defaultElectricityBill    Float? // Valor padrão para conta de luz
  defaultGasBill          Float? // Valor padrão para conta de gás
  defaultCondoFee           Float? // Valor padrão para condomínio
  defaultApartmentFinancing Float? // Valor padrão para financiamento de apartamento
  defaultInternetBill       Float? // Valor padrão para internet
  defaultPixAmount          Float? // Valor padrão para Pix
  expenses                  Expense[]
  fixedExpenses             FixedExpense[]
}

model FixedExpense {
  id                Int           @id @default(autoincrement())
  description       String
  amount            Float
  installmentNumber Int
  totalInstallments Int?
  billingPeriod     BillingPeriod @relation(fields: [billingPeriodId], references: [id])
  billingPeriodId   Int
}
